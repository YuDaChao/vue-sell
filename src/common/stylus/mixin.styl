flex-center()
  display: flex
  align-items: center
  justify-content: center


border-bottom-1px($color)
  position relative
  &::after
    content: ''
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-bottom: 1px solid $color

bg-image($url)
  background-image: url($url + '@2x.png')
  @media (min-device-pixel-ratio: 3)
    background-image: url($url + '@3x.png')
